@charset "UTF-8";

:root {
    --header-blue: #D9E9FF;      /* 연하지만 존재감 있는 블루 */
    --header-text: #1E40AF;      /* 진한 배경 위에는 흰색 글자 */
    --border-blue: #BFDBFE;      /* 헤더 테두리용 더 진한 색 */
    --main-blue: #3B82F6;        /* 일정(이벤트)용 포인트 블루 */
    --light-bg: #F8FAFC;         /* 전체 배경 */
}

#addScheduleBtn {
    transition: all 0.2s ease;
    border: none;
}

#addScheduleBtn:hover {
    background-color: #0056AA !important; /* 호버 시 조금 더 진한 파랑 */
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 86, 170, 0.2) !important;
}

/* 필터와 달력 사이의 여백 및 높이 조절 */
.row {
    align-items: flex-start;
}

/* 필터창 디자인 */
.filter-wrapper {
    background-color: #ffffff;
    min-height: 200px; /* 적당한 최소 높이 */
}

/* 달력 래퍼: 내부 여백을 줘서 달력이 답답해 보이지 않게 함 */
.calendar-wrapper {
    background-color: #ffffff;
    min-height: 800px; /* 달력 높이에 맞게 자동 조절되지만 최소값 설정 */
}
#detailTitleLink:hover {
    color: #1E90FF !important; /* 마우스 올리면 파란색으로 변경 */
    text-decoration: underline !important; /* 밑줄 표시 */
}
/* 체크박스 정렬 보정 */
.filter-item .form-check-input {
    margin-top: 0; /* 텍스트와 수평 맞추기 */
    cursor: pointer;
}

.filter-item label {
    cursor: pointer;
    font-weight: 500;
    color: #475569;
}


/* 1. 메인 본문 영역 */
.main-content {
    margin-left: 90px;
    padding: 30px;
    min-height: 100vh;
    background-color: #f8fbff;
    transition: all 0.3s ease;
    
}

/* 2. 달력을 감싸는 하얀색 카드 박스 */
.calendar-wrapper {
    background: #ffffff;
    border-radius: 20px;         /* 좀 더 둥글게 해서 세련미 추가 */
    box-shadow: 0 10px 25px rgba(44, 62, 80, 0.05); /* 깊이감 있는 그림자 */
    padding: 30px;
    border: 1px solid var(--border-blue);
}

/* 3. FullCalendar 내부 커스텀 스타일 */

/* 달력 내부의 모든 테두리 색상을 톤다운된 블루로 설정 */
.fc .fc-scrollgrid, 
.fc .fc-scrollgrid td, 
.fc .fc-scrollgrid th {
    border: 1px solid var(--border-blue) !important;
}

/* 요일 헤더 배경과 글자색 */
.fc .fc-col-header-cell {
    background-color: var(--header-blue) !important; /* 요일 칸 배경색 */
    border-color: var(--border-blue) !important;
    padding: 12px 0 !important;
}

.fc .fc-col-header-cell-cushion {
    color: var(--text-navy);
    font-weight: 700;
    text-decoration: none !important;
}

/* 날짜 숫자 스타일 */
.fc .fc-daygrid-day-number {
    color: var(--muted-text);
    padding: 8px !important;
    text-decoration: none !important;
    font-size: 0.9rem;
}

/* 오늘 날짜 숫자만 파란색으로 포인트 */
.fc .fc-day-today .fc-daygrid-day-number {
    color: var(--main-blue) !important;
    font-weight: bold;
}


/* 일정(이벤트) 스타일 */
.fc-event {
    border: none !important;
    border-radius: 4px !important;
    padding: 2px 6px !important;
    font-size: 0.8rem !important;
    cursor: pointer;
    transition: transform 0.1s ease;
}

.fc-event:hover {
    transform: scale(1.02);
    filter: brightness(0.9);
}

.fc .fc-button {
    min-width: 60px;
    font-size: 0.75rem !important;
    font-weight: 600 !important;
    padding: 8px 12px !important;
    transition: all 0.2s;
}

/* 버튼 커스텀 */
.fc .fc-button-primary {
    background-color: #ffffff !important;
    border: 1px solid var(--border-blue) !important;
    color: var(--text-navy) !important;
}

.fc .fc-button-primary:hover {
    background-color: var(--light-blue-bg) !important;
}

.fc .fc-button-active {
    background-color: var(--main-blue) !important;
    color: #fff !important;
    border-color: var(--main-blue) !important;
}

.fc .fc-toolbar-title {
    font-size: 1.25rem !important; /* 작게 조절 */
    font-weight: 700 !important;   /* 글씨를 두껍게 해서 가독성 유지 */
    color: #002B55;               /* 제공해주신 팔레트의 짙은 네이비 색상 */
    margin-left: 10px;            /* 좌우 버튼과의 간격 */
}

/* 주간/일간 뷰에서 상단 날짜 텍스트 크기도 조절하고 싶다면 */
.fc .fc-col-header-cell-cushion {
    font-size: 0.9rem;            /* 요일 글자 크기 살짝 축소 */
    text-decoration: none !important;
}

/* 프로젝트 필터 글자 강제 노출 스타일 */
#projectFilterList .form-check-label {
    display: inline-block !important;
    visibility: visible !important;
    opacity: 1 !important;
    color: #334155 !important; /* 진한 회색 */
    font-size: 0.85rem !important;
    line-height: 1.5 !important;
    width: auto !important;
    max-width: 100px !important;
    vertical-align: middle !important;
}

#projectFilterList .form-check {
    display: flex !important;
    align-items: center !important;
    margin-bottom: 8px !important; /* 위아래 간격 추가 */
    padding-left: 1.5rem !important;
}

#projectFilterList .filter-project {
    margin-right: 8px !important;
    flex-shrink: 0 !important;
}