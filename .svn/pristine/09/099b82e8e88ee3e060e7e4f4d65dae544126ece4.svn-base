@charset "UTF-8";

/* =========================================================
   [To-Do Modal] 모던 디자인 스타일
   ========================================================= */

/* 1. 모달 전체 껍데기 */
.tudio-modal-content {
    border: none;
    border-radius: 24px; /* 둥글게 */
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    overflow: hidden;
}

/* 2. 헤더 (배경 그라데이션 or 깔끔한 화이트) */
.tudio-modal-header {
    background: #ffffff;
    padding: 25px 30px 10px 30px; /* 아래 패딩 줄임 */
    border: none;
}

/* 3. 리스트 영역 (스크롤 예쁘게) */
.todo-list-area {
    max-height: 450px;
    overflow-y: auto;
    padding: 0 20px;
}
/* 스크롤바 커스텀 */
.todo-list-area::-webkit-scrollbar { width: 6px; }
.todo-list-area::-webkit-scrollbar-track { background: transparent; }
.todo-list-area::-webkit-scrollbar-thumb { background: #e2e8f0; border-radius: 10px; }
.todo-list-area::-webkit-scrollbar-thumb:hover { background: #cbd5e1; }

/* 4. 리스트 아이템 (한 줄 한 줄) */
.todo-item-row {
    transition: all 0.2s ease;
    border-radius: 12px;
    margin-bottom: 8px;
    border: 1px solid transparent;
    background: #fff;
}
.todo-item-row:hover {
    background-color: #f8fbff; /* 호버 시 아주 연한 파랑 */
    transform: translateX(4px); /* 살짝 오른쪽으로 이동 */
}
.todo-item-row.done {
    background-color: #f8f9fa;
    opacity: 0.7;
}

/* 체크박스 커스텀 (동그랗게) */
.custom-chk {
    width: 1.4em;
    height: 1.4em;
    border-radius: 50% !important; /* 원형 체크박스 */
    cursor: pointer;
    border: 2px solid #cbd5e1;
    transition: 0.2s;
}
.custom-chk:checked {
    background-color: #3B82F6;
    border-color: #3B82F6;
}

/* 5. 입력창 (하단 고정형 느낌 or 상단 박스형) */
.todo-input-box {
    background: #f1f5f9;
    border-radius: 16px;
    padding: 8px 10px 8px 20px;
    display: flex;
    align-items: center;
    border: 1px solid transparent;
    transition: 0.2s;
}
.todo-input-box:focus-within {
    background: #fff;
    border-color: #3B82F6;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.15);
}
.todo-real-input {
    border: none;
    background: transparent;
    width: 100%;
    outline: none;
    font-size: 1rem;
    color: #334155;
}

/* 추가 버튼 */
.btn-todo-add {
    width: 40px;
    height: 40px;
    border-radius: 12px;
    background: #3B82F6;
    color: #fff;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: 0.2s;
}
.btn-todo-add:hover {
    background: #2563eb;
    transform: scale(1.05);
}

/* 삭제 아이콘 */
.btn-todo-del {
    color: #94a3b8;
    transition: 0.2s;
    opacity: 0; /* 평소엔 안 보임 */
}
.todo-item-row:hover .btn-todo-del {
    opacity: 1; /* 마우스 올리면 보임 */
}
.btn-todo-del:hover { color: #ef4444; background: #fee2e2; border-radius: 8px; }