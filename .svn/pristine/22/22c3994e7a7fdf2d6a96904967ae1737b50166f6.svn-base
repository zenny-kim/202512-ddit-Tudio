@charset "UTF-8";

/* =========================================
   1. 기안서 내용 (Draft Content)
   ========================================= */
/* 본문 텍스트 영역 스타일 */
.draft-content {
    white-space: pre-wrap;      /* 줄바꿈 및 공백 유지 */
    font-size: 0.95rem;         /* 텍스트 크기 미세 조정 */
    line-height: 1.6;           /* 가독성을 위한 줄 간격 */
    min-height: 200px;          /* (인라인 스타일 변환) 최소 높이 확보 */
    background-color: #ffffff;  /* (인라인 스타일 변환) 배경색 */
}

/* =========================================
   2. 활동 기록 (Activity Log - 타임라인)
   ========================================= */
/* 개별 활동 항목 래퍼 */
.activity-log-item { 
    position: relative; 
    padding-left: 25px; 
    margin-bottom: 15px; 
    font-size: 0.85rem; 
}

/* 타임라인 점 (Dot) */
.activity-log-item::before { 
    content: ''; 
    position: absolute; 
    left: 0; 
    top: 5px; 
    width: 10px; 
    height: 10px; 
    border-radius: 50%; 
    background-color: #0d6efd; /* Bootstrap Primary Color */
    border: 2px solid #ffffff; 
    box-shadow: 0 0 0 2px #0d6efd; 
    z-index: 1; 
}

/* 타임라인 연결선 (Line) */
.activity-log-item:not(:last-child)::after { 
    content: ''; 
    position: absolute; 
    left: 4px; 
    top: 15px; 
    bottom: -15px; 
    width: 2px; 
    background-color: #dee2e6; /* 회색 선 */
}

/* =========================================
   3. 댓글 (Comments)
   ========================================= */
/* 개별 댓글 박스 */
.comment-item { 
    padding: 10px; 
    border: 1px solid #e9ecef; 
    border-radius: 6px; 
    background-color: #fff;
}

/* 댓글 입력창 옆 프로필 이미지 플레이스홀더 (인라인 스타일 변환) */
.comment-profile-placeholder {
    width: 38px; 
    height: 38px; 
    line-height: 38px; 
    background-color: #6c757d;
    color: #fff;
    text-align: center;
    border-radius: 50%; /* 원형 처리 */
}

/* =========================================
   4. 결재 라인 테이블 (Approval Table)
   ========================================= */
/* 가로 스크롤 허용 컨테이너 (인라인 스타일 변환) */
.approval-table-container {
    overflow-x: auto;
}

/* 테이블 최소 너비 보장 (인라인 스타일 변환) */
.approval-table {
    min-width: 600px;
}