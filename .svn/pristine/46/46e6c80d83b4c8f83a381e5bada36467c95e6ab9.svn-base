@charset "UTF-8";

/* =========================================
   1. 기본 변수 및 메인 컨테이너
   ========================================= */
:root { 
    --primary-color: #0d6efd;
    --bg-body: #f4f7f6;
    --border-color: #eaedf0;
    --text-main: #333;
}

/* 메인 콘텐츠 영역 (사이드바 제거 버전) */
.main-content-wrap { 
    padding: 30px; 
    width: 100%; 
    max-width: 1000px; /* 가독성을 위해 최대 너비 제한 (선택사항) */
    margin: 0 auto;    /* 중앙 정렬 */
    min-height: 100vh;
    background-color: var(--bg-body);
    font-family: 'Pretendard', -apple-system, BlinkMacSystemFont, system-ui, Roboto, sans-serif;
    color: var(--text-main);
}

/* =========================================
   2. 문서 카드 (Document Card)
   ========================================= */
.doc-card { 
    border: 1px solid var(--border-color); 
    border-radius: 12px; 
    background: #fff; 
    box-shadow: 0 4px 20px rgba(0,0,0,0.03); 
    overflow: hidden;
    margin-bottom: 1.5rem;
}

/* =========================================
   3. 정보 테이블 (Info Table)
   ========================================= */
.info-table {
    width: 100%;
    border-collapse: collapse;
}

.info-table th { 
    background: #f8f9fa; 
    width: 120px; 
    padding: 12px 16px; 
    border: 1px solid #eee; 
    font-weight: 600;
    color: #555;
    vertical-align: middle;
}

.info-table td { 
    padding: 12px 16px; 
    border: 1px solid #eee; 
    vertical-align: middle;
}

/* =========================================
   4. 결재 도장 (Approval Stamps)
   ========================================= */
.approval-stamp { 
    width: 90px; 
    height: 110px; 
    border: 1px solid #dee2e6; 
    text-align: center; 
    display: flex; 
    flex-direction: column; 
    background: #fff; 
}

/* 도장 내부 텍스트 (역할/날짜) - HTML 구조에 따라 추가 스타일링 필요 시 사용 */
.approval-stamp > div:first-child { /* 역할(Role) 영역 */
    background-color: #f8f9fa;
    font-size: 0.75rem;
    font-weight: bold;
    padding: 4px 0;
    border-bottom: 1px solid #dee2e6;
}

.approval-stamp > div:last-child { /* 날짜(Date) 영역 */
    font-size: 0.75rem;
    background-color: #fff;
    border-top: 1px solid #dee2e6;
    padding: 2px 0;
}

/* 승인 도장 (파란색 원형) */
.stamp-ok { 
    border: 3px solid #0d6efd; 
    color: #0d6efd; 
    border-radius: 50%; 
    width: 60px; 
    height: 60px; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    margin: auto; 
    transform: rotate(-15deg); 
    opacity: 0.8; 
    font-weight: 800; 
    font-size: 0.9rem;
}

/* 반려 도장 (빨간색 사각형) */
.stamp-reject { 
    border: 3px solid #dc3545; 
    color: #dc3545; 
    border-radius: 4px; 
    width: 60px; 
    height: 40px; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    margin: auto; 
    font-weight: 800; 
    font-size: 0.9rem;
}

/* =========================================
   5. 문서 본문 (Body View)
   ========================================= */
.doc-body-view { 
    min-height: 300px; 
    white-space: pre-line; /* 줄바꿈 반영 */
    padding: 40px; 
    line-height: 1.8; 
    font-size: 1rem;
    color: #212529;
}