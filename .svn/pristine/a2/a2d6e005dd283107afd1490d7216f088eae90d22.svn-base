@charset "UTF-8";

/* 기본 레이아웃 설정 */
body {
    background-color: #f8f9fa;
    padding-top: 80px; 
    padding-bottom: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    margin: 0;
}

.register-container {
    width: 100%;
    max-width: 650px;
    padding: 20px;
}

/* ------------------------------------------------------- */
/* 카드 선택 효과 스타일 (type-card) */
/* ------------------------------------------------------- */

.type-card {
    transition: all 0.3s ease;     /* 0.3초 동안 부드럽게 변환 */
    border: 2px solid transparent; /* 테두리 공간 미리 확보 (화면 떨림 방지) */
    cursor: pointer;               /* 마우스 올리면 손가락 모양 */
    height: 100%;
    background: white;
    border-radius: 10px;
}

/* 마우스를 올렸을 때 (Hover 상태) */
.type-card:hover {
    border-color: #0d6efd; /* 테두리를 파란색으로 변경 */
    transform: translateY(-10px); /* 카드가 살짝 위로 뜸 */
    box-shadow: 0 1rem 3rem rgba(13, 110, 253, 0.15) !important; /* 파란색 그림자 효과 */
}

/* 마우스를 올렸을 때 제목 글자색 변경 */
.type-card:hover .card-title {
    color: #0d6efd !important;
    font-weight: bold;
}