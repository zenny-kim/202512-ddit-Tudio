.container{background-color:#f0f4f8;min-height:100vh;padding:40px 20px;font-family:Pretendard,-apple-system,BlinkMacSystemFont,system-ui,Roboto,sans-serif}.card{max-width:650px;margin:0 auto;background:#fff;padding:40px;border-radius:16px;border-top:8px solid #2C5282;box-shadow:0 4px 20px #00000014}.title{font-size:26px;font-weight:800;color:#1a365d;margin-bottom:12px;text-align:center}.subtitle{font-size:15px;color:#4a5568;margin-bottom:40px;text-align:center;line-height:1.6}.section-title{font-size:18px;font-weight:700;color:#2c5282;margin:40px 0 20px;padding-bottom:10px;border-bottom:2px solid #E2E8F0}.question-box{margin-bottom:35px}.question-text{display:block;font-weight:700;margin-bottom:15px;font-size:16px;color:#2d3748;line-height:1.5}.option-label{display:flex;align-items:center;padding:14px 20px;background:#fff;border:1.5px solid #E2E8F0;border-radius:10px;margin-bottom:10px;cursor:pointer;color:#4a5568;transition:all .2s ease;font-size:15px}.option-label:hover{border-color:#3182ce;background-color:#f7fafc}.option-label input{margin-right:12px;width:18px;height:18px}.select-input{width:100%;padding:14px;border-radius:10px;border:1.5px solid #E2E8F0;font-size:15px;color:#2d3748;background-color:#fff;outline:none}.scale-container{display:flex;justify-content:space-between;background:#f8fafc;padding:20px 10px;border-radius:12px;border:1.5px solid #EDF2F7}.scale-option{display:flex;flex-direction:column;align-items:center;flex:1;cursor:pointer}.scale-option span{font-size:12px;margin-top:8px;color:#718096}.submit-button{width:100%;padding:18px;background-color:#3182ce;color:#fff;border:none;border-radius:10px;font-size:18px;font-weight:700;cursor:pointer;margin-top:30px;box-shadow:0 4px 12px #3182ce33;transition:background .2s}.submit-button:hover{background-color:#2b6cb0}
