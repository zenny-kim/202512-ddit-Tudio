@charset "UTF-8";

/* =========================================
   1. 기본 레이아웃
   ========================================= */
:root {
	--bg-body: #f8f9fa;
	--header-height: 70px;
}

.main-content-wrap {
	padding: 30px 40px;
	width: 100%;
	min-height: calc(100vh - var(--header-height));
	background-color: var(--bg-body);
	font-family: 'Pretendard', sans-serif;
}

/* =========================================
   2. 테이블 스타일 (반응형 Wrapping 적용)
   ========================================= */
.tudio-table-card {
	table-layout: fixed;
	width: 100%;
	border-collapse: separate;
	border-spacing: 0;
}

/* [핵심 수정 1] 줄바꿈 허용 (white-space: normal) */
.tudio-table-card thead th, .tudio-table-card tbody td {
	box-sizing: border-box;
	text-align: center !important;
	vertical-align: middle; /* 줄바꿈 되어도 수직 중앙 정렬 */
	/* 기존 nowrap 제거 -> 줄바꿈 허용 */
	white-space: normal !important;
	/* 단어 단위로 줄바꿈 (한글 최적화) */
	word-break: keep-all;
	word-wrap: break-word;
}

/* 헤더 스타일 */
.tudio-table-card thead th {
	font-size: 15px !important;
	background-color: #f8fafc !important;
	color: #475569;
	padding: 12px 4px; /* 좌우 패딩을 최소화하여 좁은 화면 대비 */
	border-bottom: 1px solid #e2e8f0;
	font-weight: 700;
}

/* 본문 스타일 */
.tudio-table-card tbody td {
	font-size: 15px;
	padding: 16px 4px; /* 줄바꿈 될 것을 고려해 패딩 조정 */
	background-color: #fff;
	border-bottom: 1px solid #f1f5f9;
	color: #334155;
	line-height: 1.4; /* 여러 줄일 때 가독성 확보 */
}

.tudio-table-card tbody tr:hover td {
	background-color: #f8fbff;
}

.tudio-table-card tbody tr:last-child td {
	border-bottom: none;
}

/* 핀 아이콘 컬럼 패딩 제거 */
.tudio-table-card tbody tr td:first-child {
	padding: 0 !important;
}

/* =========================================
   3. 컬럼 너비 재조정 (비율 % 배분)
   ========================================= */
/* 화면이 줄어들면 이 비율을 유지하면서 글자가 아래로 떨어집니다 */
.col-pin {
	width: 4%;
	min-width: 30px;
}

.col-title {
	width: 28%;
	text-align: left !important;
	padding-left: 10px !important;
} /* 제목 비중 확대 */
.col-status {
	width: 9%;
}

.col-assignee {
	width: 8%;
}

.col-start-date {
	width: 10%;
}

.col-end-date {
	width: 10%;
}

.col-priority {
	width: 8%;
}

.col-progress {
	width: 15%;
}

.col-writer {
	width: 8%;
}

/* [핵심 수정 2] 가로 스크롤 유발하는 강제 min-width 미디어 쿼리 삭제함 */
/* 이제 화면이 좁아져도 스크롤 안 생기고 테이블이 홀쭉해지며 글자가 줄바꿈됨 */

/* =========================================
   4. UI 컴포넌트
   ========================================= */
/* 제목 텍스트: 말줄임표(...) 제거하고 다 보여주기 */
.text-truncate-custom {
	display: block; /* inline-block -> block 변경하여 너비 꽉 채움 */
	max-width: 100%;
	white-space: normal; /* 줄바꿈 허용 */
	text-overflow: unset; /* ... 제거 */
	overflow: visible;
	font-size: 1rem;
	font-weight: 600;
	color: #1e293b;
}

.pin-icon {
	cursor: pointer;
	font-size: 1.3rem;
	color: #cbd5e1;
	transition: transform 0.2s, color 0.2s;
}

.pin-icon:hover {
	transform: scale(1.1);
}

.pin-icon.active {
	color: #f59e0b !important;
}

/* =========================================
   5. 우측 슬라이딩 패널 (기존 유지)
   ========================================= */
.task-detail-panel {
	position: fixed;
	top: var(--header-height);
	right: -600px;
	width: 600px;
	height: calc(100vh - var(--header-height));
	background: #fff;
	border-left: 1px solid #e2e8f0;
	z-index: 1060;
	transition: right 0.35s cubic-bezier(0.16, 1, 0.3, 1);
	box-shadow: -15px 0 30px rgba(0, 0, 0, 0.05);
	display: flex;
	flex-direction: column;
}

.task-detail-panel.open {
	right: 0;
}

.panel-header {
	padding: 24px;
	border-bottom: 1px solid #eef2f7;
	background: #fff;
	display: flex;
	justify-content: space-between;
	align-items: center;
	flex-shrink: 0;
}

.panel-body {
	padding: 30px;
	overflow-y: auto;
	flex-grow: 1;
}

.panel-footer {
	padding: 20px 30px;
	border-top: 1px solid #eef2f7;
	background: #f8fafc;
	display: flex;
	justify-content: space-between;
	flex-shrink: 0;
}

.task-detail-panel .form-label {
	margin-bottom: 8px;
	font-weight: 600;
	font-size: 0.9rem;
}

.task-detail-panel .form-control, .task-detail-panel .form-select {
	padding: 10px;
	border-radius: 8px;
	border-color: #e2e8f0;
}

.task-detail-panel .form-control:focus {
	border-color: #3B82F6;
	box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

/* =========================================
   6. 계층 구조 디자인 (Hierarchy & Accordion)
   ========================================= */

/* A. 껍데기 상위업무 */
.task-shell-row td {
    background-color: #f8fafc !important;
    color: #64748b;
    border-bottom: 1px solid #e2e8f0;
    padding-top: 12px;
    padding-bottom: 12px;
}
/* ... 껍데기 텍스트/링크 스타일 유지 ... */

/* B. 하위업무 행 */
.task-sub-row td {
    background-color: #fff;
    border-bottom: 1px solid #f1f5f9;
    position: relative; /* 연결선 기준점 */
}

/* C. 연결선 디자인 수정 (안정적인 위치 잡기) */
.sub-task-connection {
    padding-left: 45px !important;
    text-align: left !important;
    position: relative; /* 필수 */
}

/* D. 토글 버튼 스타일 */
.accordion-btn {
    border: none;
    background: none;
    padding: 2px 6px;
    color: #94a3b8;
    border-radius: 4px;
    transition: all 0.2s;
}
.accordion-btn:hover {
    background-color: #eff6ff;
    color: #3b82f6;
}
/* 아이콘 크기 통일 */
.accordion-btn i {
    font-size: 1rem;
    font-weight: bold;
    display: block;
}