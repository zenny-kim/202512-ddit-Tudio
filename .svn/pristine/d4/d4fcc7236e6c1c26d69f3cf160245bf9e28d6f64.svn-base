@charset "UTF-8";

/* :root 삭제 -> common.css 변수 사용 */

.floating-chat-container {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 1000;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.chat-list-box {
    position: absolute;
    bottom: 80px;      
    right: 0;          
    width: 320px;      
    height: 520px;     
    max-height: 70vh;  
    
    background-color: var(--bg-color);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-soft);
    
    transform-origin: bottom right;
    transform: scale(0.9) translateY(10px); 
    opacity: 0;
    visibility: hidden; 
    pointer-events: none;
    transition: transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1), opacity 0.2s linear, visibility 0.3s;
    overflow: hidden;  
    z-index: 1001;     
}

.chat-list-box.active {
    opacity: 1;                 
    transform: scale(1) translateY(0); 
    visibility: visible;        
    pointer-events: auto;       
}

.floating-chat-btn {
    width: 60px; 
    height: 60px;
    background-color: var(--primary-color);
    border-radius: 50%;
    border: none;
    box-shadow: var(--shadow-floating);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    position: relative; 
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    color: white;
    z-index: 1002;
}

.floating-chat-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(0, 122, 255, 0.4);
}
.floating-chat-btn:active { transform: scale(0.96); }

.icon-wrapper { display: flex; align-items: center; justify-content: center; }

.notification-badge {
    position: absolute; top: -2px; right: -2px;
    background-color: var(--danger-color); /* common 변수 사용 */
    color: white;
    font-size: 11px; font-weight: 700;
    min-width: 20px; height: 20px; padding: 0 6px;
    border-radius: 10px; box-sizing: border-box;
    display: flex; align-items: center; justify-content: center;
    border: none; box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16); 
    line-height: 1; z-index: 1003;
}
