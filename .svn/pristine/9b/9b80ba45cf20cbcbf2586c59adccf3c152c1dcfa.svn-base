@charset "UTF-8";

/* =========================================
   1. 기본 변수 및 메인 컨테이너
   ========================================= */
:root { 
    --primary-color: #0d6efd; 
    --bg-body: #f4f7f6;
}

/* 메인 콘텐츠 영역 (사이드바 의존성 제거) */
.main-content-wrap { 
    padding: 30px; 
    width: 100%; 
    min-height: 100vh;
    background-color: var(--bg-body);
    font-family: 'Pretendard', sans-serif;
}

/* =========================================
   2. 테이블 컬럼 레이아웃 (Width 조정)
   ========================================= */
.col-pin { width: 50px; text-align: center; }
.col-title { width: 47%; }
.col-priority { width: 10%; text-align: center; }
.col-status { width: 10%; text-align: center; }
.col-progress { width: 13%; text-align: center; }
.col-assignee { width: 10%; text-align: center; }
.col-date { width: 15%; text-align: center; }

/* 테이블 섹션 제목 (예: 상단 고정된 업무) */
.table-section-title { 
    font-size: 1.1rem; 
    font-weight: 700; 
    color: #1e293b; 
}

/* 프로젝트 그룹 헤더 (폴더 아이콘 + 프로젝트명) */
.project-group-header {
    margin-top: 30px;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
}

/* 긴 텍스트 말줄임 처리 */
.text-truncate-custom { 
    display: inline-block; 
    max-width: 100%; 
    white-space: nowrap; 
    overflow: hidden; 
    text-overflow: ellipsis; 
    vertical-align: middle; 
}

/* =========================================
   3. UI 요소 스타일 (핀, 프로필, 배지)
   ========================================= */
/* 핀(고정) 아이콘 */
.pin-icon { 
    cursor: pointer; 
    transition: color 0.2s; 
    font-size: 1.1rem; 
    color: #adb5bd; 
}
.pin-icon.active { 
    color: var(--primary-color) !important; 
}

/* 담당자 프로필 이미지 (원형) */
.profile-img-wrap { 
    width: 24px; height: 24px; 
    border-radius: 50%; 
    display: inline-flex; 
    align-items: center; 
    justify-content: center; 
    background-color: var(--primary-color); 
    color: white; 
    font-weight: bold; 
    font-size: 0.6rem; 
    flex-shrink: 0; 
    margin-right: 6px; 
}

/* 우선순위 배지 커스텀 */
.badge-priority-high { background-color: #ffeaea; color: #dc3545; border: 1px solid #f5c2c7; }
.badge-priority-medium { background-color: #fff3cd; color: #856404; border: 1px solid #ffeeba; }
.badge-priority-low { background-color: #e2e3e5; color: #383d41; border: 1px solid #d6d8db; }

/* D-Day 텍스트 스타일 */
.d-day-text { 
    font-weight: 600; 
    font-size: 0.85rem; 
    margin-left: 6px; 
}
.d-day-normal { color: #333; }
.d-day-urgent { color: #dc3545; }

/* =========================================
   4. 우측 슬라이딩 패널 (업무 상세)
   ========================================= */
.task-detail-panel { 
    position: fixed; 
    top: 60px; /* 헤더 높이만큼 띄움 */
    right: -500px; /* 기본적으로 화면 밖으로 숨김 */
    width: 500px; 
    height: calc(100vh - 60px); 
    background: #fff; 
    border-left: 1px solid #dee2e6; 
    z-index: 1050; 
    transition: right 0.3s ease; 
    padding: 25px; 
    overflow-y: auto; 
    box-shadow: -5px 0 15px rgba(0,0,0,0.05); 
}

/* 패널 열림 상태 */
.task-detail-panel.open { 
    right: 0; 
}