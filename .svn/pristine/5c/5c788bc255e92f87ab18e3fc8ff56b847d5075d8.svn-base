@charset "UTF-8";

/* =========================================
   1. 기본 레이아웃 (Layout Fix)
   ========================================= */
:root {
	--bg-body: #f8f9fa;
	--header-height: 70px;
}

/* [중요 수정] width: 100% 제거. 
   상위 flex 컨테이너에 의해 자동으로 채워지도록 설정 */
.main-content-wrap {
	/* 이미 상위에서 d-flex가 적용되었으므로 min-height만 잡아줍니다 */
	min-height: calc(100vh - var(--header-height));
	background-color: var(--bg-body);
	font-family: 'Pretendard', sans-serif;
	/* padding은 JSP의 클래스(px-4 pt-4 pb-5)로 제어하는 것이 더 안전함 */
}

/* 불필요한 컨테이너 CSS 제거 (Bootstrap container-fluid 사용) */
/* .my-task-container { ... }  <- 삭제함 */

/* =========================================
   2. 테이블 스타일 (Clean Up)
   ========================================= */
.tudio-table-card {
	table-layout: fixed;
	width: 100%;
	border-collapse: separate;
	border-spacing: 0; /* 테두리 간격 0으로 해야 카드 내부에 딱 맞음 */
}

/* 헤더 & 바디 정렬 통일 */
.tudio-table-card thead th, .tudio-table-card tbody td {
	box-sizing: border-box;
	text-align: center !important;
	vertical-align: middle;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

/* 헤더 스타일 */
.tudio-table-card thead th {
	font-size: 14px !important;
	background-color: #f8fafc !important; /* 약간 더 밝은 배경 */
	color: #64748b;
	padding: 14px 10px;
	border-bottom: 1px solid #e2e8f0;
	font-weight: 700;
}

/* 본문 스타일 */
.tudio-table-card tbody td {
	font-size: 14px; /* 글씨 크기 14px로 조정 (너무 크면 밀림) */
	padding: 16px 10px;
	background-color: #fff;
	border-bottom: 1px solid #f1f5f9;
}

/* 마지막 행 보더 제거 */
.tudio-table-card tbody tr:last-child td {
	border-bottom: none;
}

/* 호버 효과 */
.tudio-table-card tbody tr:hover td {
	background-color: #f8fbff;
}

/* =========================================
   3. 컬럼 너비 재조정 (Column Widths)
   ========================================= */
.col-pin {
	width: 60px;
}

.col-title {
	width: auto;
	text-align: left !important;
	padding-left: 20px !important;
} /* 제목만 왼쪽 정렬 + 여백 */
.col-priority {
	width: 90px;
}

.col-status {
	width: 90px;
}

.col-progress {
	width: 160px;
}

.col-assignee {
	width: 90px;
}

.col-date {
	width: 120px;
}

/* =========================================
   4. UI 컴포넌트 디자인
   ========================================= */
/* 제목 텍스트 */
.text-truncate-custom {
	display: inline-block;
	max-width: 100%;
	vertical-align: middle;
	font-size: 1rem;
	color: #1e293b;
}

/* 핀 아이콘 */
.pin-icon {
	cursor: pointer;
	font-size: 1.2rem;
	color: #cbd5e1;
	transition: transform 0.2s, color 0.2s;
}

.pin-icon:hover {
	transform: scale(1.1);
}

.pin-icon.active {
	color: #f59e0b !important;
}

/* D-Day */
.d-day-text {
	display: inline-block;
	font-weight: 700;
	font-size: 0.85rem;
	margin-left: 6px;
}

/* =========================================
   5. 우측 슬라이딩 패널 (고정 위치 수정)
   ========================================= */
.task-detail-panel {
	position: fixed;
	top: var(--header-height); /* 70px */
	right: -600px;
	width: 600px;
	height: calc(100vh - var(--header-height));
	background: #fff;
	border-left: 1px solid #e2e8f0;
	z-index: 1060; /* 모달(1055)보다 위에 오도록 조정 */
	transition: right 0.35s cubic-bezier(0.16, 1, 0.3, 1);
	box-shadow: -15px 0 30px rgba(0, 0, 0, 0.05);
	display: flex;
	flex-direction: column;
}

.task-detail-panel.open {
	right: 0;
}

.panel-header {
	padding: 24px;
	border-bottom: 1px solid #eef2f7;
	background: #fff;
	display: flex;
	justify-content: space-between;
	align-items: center;
	flex-shrink: 0;
}

.panel-body {
	padding: 30px;
	overflow-y: auto;
	flex-grow: 1;
}

.panel-footer {
	padding: 20px 30px;
	border-top: 1px solid #eef2f7;
	background: #f8fafc;
	display: flex;
	justify-content: space-between;
	flex-shrink: 0;
}

.task-detail-panel .form-label {
	margin-bottom: 8px;
	font-weight: 600;
	font-size: 0.9rem;
}

.task-detail-panel .form-control, .task-detail-panel .form-select {
	padding: 10px;
	border-radius: 8px;
	border-color: #e2e8f0;
}

.task-detail-panel .form-control:focus {
	border-color: #3B82F6;
	box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}