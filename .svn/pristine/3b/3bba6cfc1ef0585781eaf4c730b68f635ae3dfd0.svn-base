@charset "UTF-8";

/* =========================================
   1. 기본 변수 및 메인 컨테이너
   ========================================= */
:root { 
    --primary-color: #0d6efd; 
    --bg-body: #f4f7f6;
    --text-main: #333;
}

/* 메인 콘텐츠 영역 (사이드바 의존성 제거됨) */
.main-content-wrap { 
    padding: 30px; 
    width: 100%; 
    min-height: 100vh;
    background-color: var(--bg-body);
    font-family: 'Pretendard', sans-serif;
    color: var(--text-main);
  /*  margin-left: 90px; */
}

/* =========================================
   2. 검색 및 필터 영역 스타일
   ========================================= */
/* 필터 입력 그룹 (검색어, 날짜 등) */
.filter-input-group {
    flex-grow: 1; /* 남은 공간 모두 차지 */
}

/* 정렬 선택 박스 (Sort Select) */
.sort-select {
    min-width: 130px; /* 너무 좁아지지 않도록 최소 너비 설정 */
}

/* =========================================
   3. 프로젝트 카드 스타일
   ========================================= */
.project-card {
    transition: transform 0.2s, box-shadow 0.2s;
    cursor: pointer;
    border: none;
    border-radius: 12px;
    background-color: #fff;
}

/* 카드 호버 효과 (살짝 뜨면서 그림자 강조) */
.project-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important; /* Bootstrap shadow 덮어쓰기 */
}

/* 카드 내부 텍스트 */
.project-card .card-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: #1e293b;
}

.project-card .card-text {
    font-size: 0.85rem;
}

/* =========================================
   4. 즐겨찾기 아이콘 스타일
   ========================================= */
.favorite-icon {
    cursor: pointer;
    transition: transform 0.2s;
}

.favorite-icon:hover {
    transform: scale(1.1); /* 호버 시 살짝 확대 */
}