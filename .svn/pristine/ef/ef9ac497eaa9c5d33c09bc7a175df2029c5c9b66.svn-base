@charset "UTF-8";

/* ✅ Kanban - 팀 공통 디자인 시스템 적용 버전 */
.kanban-wrapper {
	display: flex;
	gap: 20px; /* 공통 가이드에 맞춰 간격 소폭 조정 */
	align-items: flex-start;
	overflow-x: auto;
	padding: 10px 0;
	margin: 0;
}

.kanban-col {
	flex: 1;
	min-width: 300px;
	display: flex;
	flex-direction: column;
	/* ✅ 공통 배경색 및 테두리 적용 */
	background: #F1F5F9; /* --bg-body와 유사한 톤 */
	border: 1px solid var(--border-blue);
	border-radius: 12px; /* 팀 공통 border-radius 반영 */
	padding-bottom: 12px;
}

.col-header {
	display: flex;
	align-items: center;
	padding: 18px 16px 12px 16px;
	color: var(--dark-navy); /* 강조색 적용 */
	font-weight: 700;
	text-align: left;
	font-size: 14px;
	letter-spacing: 0.5px;
}

/* ✅ 하단 라인 강조색 수정 */
.col-header.request { border-bottom: 3px solid var(--main-blue); margin: 0 12px; }
.col-header.inprogress { border-bottom: 3px solid #F59E0B; margin: 0 12px; }
.col-header.done { border-bottom: 3px solid #22C55E; margin: 0 12px; }
.col-header.hold { border-bottom: 3px solid var(--text-muted); margin: 0 12px; }
.col-header.delayed { border-bottom: 3px solid #ef4444; margin: 0 12px; } /* 지연 상태 추가 */

.col-header .count {
	margin-left: 8px;
	font-size: 12px;
	color: var(--text-muted);
	background: #fff;
	padding: 2px 8px;
	border-radius: 10px;
	font-weight: 600;
}

.task-list {
	padding: 12px;
	min-height: 600px;
}

/* ✅ 작업 카드: tudio-item 스타일 계승 */
.task-card {
	background: #ffffff;
	padding: 18px;
	border-radius: 12px; /* 팀 공통 라운딩 */
	margin-bottom: 12px;
	border: 1px solid var(--tudio-border-soft);
	box-shadow: 0 4px 6px rgba(15, 23, 42, 0.04);
	cursor: grab;
	position: relative;
	transition: all 0.2s ease;
}

.task-card:hover {
	transform: translateY(-2px);
	box-shadow: var(--tudio-shadow-hover);
	border-color: var(--border-blue);
}

.task-card:active { cursor: grabbing; }

.task-card.read-only {
	cursor: default;
	background-color: #fcfdfe;
	border-style: dashed; /* 읽기 전용은 대시 테두리로 구분 */
}

/* ✅ Pin 스타일: 팀 공통 색상 적용 */
.task-card.pin-on {
	background-color: #FFFDF2 !important; /* 연한 황금색 톤 유지 */
	border: 1px solid #FDE68A !important;
	box-shadow: 0 4px 12px rgba(251, 191, 36, 0.1);
}

.task-card.pin-on .pin-btn svg { fill: #F59E0B !important; }
.task-card.pin-off .pin-btn svg { fill: #CBD5E1 !important; transform: rotate(-45deg); }

.pin-btn {
	cursor: pointer;
	width: 24px;
	height: 24px;
	display: flex;
	align-items: center;
	justify-content: center;
}

.task-card .card-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 10px;
}

.parent-title {
	font-size: 11px;
	font-weight: 700;
	color: var(--main-blue);
	background: var(--header-blue); /* 공통 연파랑 배경 */
	padding: 3px 8px;
	border-radius: 6px;
}

.task-title {
	font-weight: 700;
	font-size: 15px;
	color: var(--text-main);
	margin: 10px 0;
	display: block;
	line-height: 1.4;
}

.manager-name {
	font-size: 13px;
	color: var(--text-main);
	font-weight: 500;
}

.end-date {
	font-size: 12px;
	color: var(--text-muted);
	margin-top: 6px;
	display: block;
}

/* ✅ 프로그레스 바 영역: 팀 공통 스타일 반영 */
.rate-container {
	margin-top: 15px;
	border-top: 1px solid var(--tudio-border-subtle);
	padding-top: 12px;
}

.rate-slider {
	width: 100%;
	height: 5px;
	cursor: pointer;
	accent-color: var(--main-blue); /* 슬라이더 색상 통일 */
}

.rate-text {
	display: block;
	margin-top: 4px;
	font-size: 11px;
	color: var(--main-blue);
	text-align: right;
	font-weight: 800;
}

/* 스크롤바 디자인 */
.kanban-wrapper::-webkit-scrollbar { height: 8px; }
.kanban-wrapper::-webkit-scrollbar-thumb {
	background: var(--border-blue);
	border-radius: 10px;
}