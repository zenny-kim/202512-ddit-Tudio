@charset "UTF-8";

/* :root 및 reset 삭제 -> common.css 사용 */

/* ==========================
Chat Widget Frame
========================== */
.chat-widget {
    width: 100%;
    height: 100%;
    background-color: var(--bg-secondary); /* list.css와 달리 여긴 회색 배경 */
    border-radius: 0; 
    box-shadow: none;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

/* ==========================
Header
========================== */
.chat-room-header {
    /* [수정] 팝업 메뉴의 기준점이 되도록 relative 추가 */
    position: relative; 
    
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 20px; 
    background-color: var(--bg-color);
    z-index: 10;
    flex-shrink: 0;
    border-bottom: 1px solid rgba(0,0,0,0.05);
}

.header-left { display: flex; align-items: center; flex-shrink: 0; }
.header-right { display: flex; align-items: center; gap: 0px; flex-shrink: 0; margin-left: 8px; }

/* 버튼 스타일 */
.header-btn {
    background: none;
    border: none;
    color: var(--text-primary);
    padding: 6px; 
    cursor: pointer;
    border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
    transition: background-color 0.2s;
    position: relative;
}
.header-btn:hover { background-color: var(--bg-secondary); }

/* 제목 영역 */
.room-title {
    margin: 0 4px;
    font-size: 17px;
    font-weight: 700;
    color: var(--text-primary);
    display: flex; align-items: center; justify-content: center;
    flex-grow: 1; min-width: 0;
}

.room-name-text { white-space: nowrap; overflow: hidden; text-overflow: ellipsis; display: block; }
.member-count { font-size: 13px; color: var(--text-secondary); font-weight: 400; margin-left: 4px; flex-shrink: 0; }

/* ==========================
Chat Content
========================== */
.chat-room-content {
    flex-grow: 1;
    padding: 20px 16px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 16px;
    
}

.chat-room-content::-webkit-scrollbar {
    width: 14px; 
}

.chat-room-content::-webkit-scrollbar-thumb {
    background-color: #d1d1d6; 
    border-radius: 10px;
    background-clip: padding-box;
    border: 4px solid transparent; /* 투명 테두리로 여백 효과 */
}

.chat-room-content::-webkit-scrollbar-track {
    background-color: transparent;
    
    /* 헤더와 입력창에 딱 붙지 않도록 위아래 여백 추가 */
    margin-top: 10px;
    margin-bottom: 10px;
}

/* System Messages */
.system-message-container {
    display: flex; flex-direction: column; align-items: center;
    gap: 12px; margin: 0;
}

/* ==========================
   System Messages (iOS/Toss Capsule Style)
   기존 .system-message 부분을 이것으로 교체
========================== */
.system-message {
    display: inline-block;
    background-color: rgba(0, 0, 0, 0.04);
    color: #6b7684; 
    font-size: 12px;
    font-weight: 500;
    padding: 6px 16px; 
    border-radius: 24px; 
    text-align: center;
    line-height: 1.5;
    word-break: keep-all;
    max-width: 70%; 
    margin: 0;
    box-shadow: none;
}

/* Message Row Common */
.message-row { display: flex; width: 100%; }

.message-bubble {
    padding: 10px 14px;
    font-size: 15px; line-height: 1.4;
    border-radius: var(--radius-md);
    max-width: 220px; word-break: break-word;
    position: relative;
}

.message-time {
    font-size: 11px; color: var(--text-secondary);
    white-space: nowrap; margin-bottom: 2px;
}

/* Received Message (Left) */
.message-row.received { align-items: flex-start; }

.message-row.received .default-avatar,
.message-row.received .profile-img {
    margin-right: 8px; 
    flex-shrink: 0;
}

.message-content { display: flex; flex-direction: column; align-items: flex-start; }
.sender-name { font-size: 12px; color: var(--text-secondary); margin-bottom: 4px; margin-left: 2px; }

.message-row.received .bubble-container { display: flex; align-items: flex-end; }
.message-row.received .message-bubble {
    background-color: var(--bg-color);
    color: var(--text-primary);
    border-top-left-radius: 4px;
    box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}

/* Sent Message (Right) */
.message-row.sent { justify-content: flex-end; align-items: flex-end; }
.message-row.sent .bubble-container { display: flex; flex-direction: row; align-items: flex-end; }

.sent-info {
    display: flex; flex-direction: column; align-items: flex-end; justify-content: flex-end;
    margin-right: 6px; min-width: 50px;
}

.unread-count {
    font-size: 10px; color: var(--primary-color);
    font-weight: 700; margin-bottom: 2px;
}

.message-row.sent .message-bubble {
    background-color: var(--primary-color);
    color: var(--text-on-primary);
    border-top-right-radius: 4px;
    box-shadow: 0 1px 2px rgba(0,0,0,0.1);
}

.received-info {
    display: flex; flex-direction: column; align-items: flex-start;
    justify-content: flex-end; margin-left: 6px;
}

/* ==========================
Input Area
========================== */
.chat-input-area {
    background-color: var(--bg-color);
    padding: 12px 10px;
    display: flex; align-items: flex-end; gap: 8px;
    min-height: 60px; height: auto; flex-shrink: 0;
}

.input-wrapper {
    flex-grow: 1;
    background-color: var(--bg-secondary);
    border-radius: 20px;
    display: flex; align-items: center;
    padding-right: 1px; padding-left: 12px;
    min-height: 44px;
}

/* ==========================
   Input Area (Textarea Style)
========================== */
.chat-input {
    width: 100%; 
    border: none; 
    background-color: transparent;
    font-size: 15px; 
    line-height: 1.4; 
    outline: none; 
    resize: none;
    
    /* 패딩: 위아래 12px -> 텍스트가 중앙에 오도록 */
    padding: 12px 0; 
    
    height: 44px;      /* 기본 높이 */
    max-height: 120px; /* 최대 늘어나는 높이 */
    
    /* [핵심 수정 1] 기본적으로 스크롤바 숨김 (JS가 필요할 때 켜줌) */
    overflow-y: hidden; 
    
    font-family: inherit; 
    margin: 0;
}

/* 스크롤바 너비 */
.chat-input::-webkit-scrollbar { 
    width: 14px; /* 리스트와 동일한 너비 */
}

/* 스크롤바 막대 (Thumb) */
.chat-input::-webkit-scrollbar-thumb {
    background-color: #d1d1d6; 
    border-radius: 10px;
    background-clip: padding-box;
    border: 4px solid transparent; /* 투명 테두리로 얇게 보이게 */
}

/* [핵심 수정 2] 스크롤바 트랙 (Track) - 위아래 여백 추가 */
.chat-input::-webkit-scrollbar-track {
    background-color: transparent;
    
    /* 입력창은 높이가 작으니 10px은 너무 큼 -> 6px 정도로 조정 */
    margin-top: 6px;
    margin-bottom: 6px;
}

.footer-btn {
    border: none; width: 36px; height: 36px;
    border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
    cursor: pointer; flex-shrink: 0; margin-bottom: 4px;
    transition: background-color 0.2s; position: relative;
}

.attach-btn { background-color: transparent; color: var(--text-secondary); }
.attach-btn:hover { background-color: var(--bg-secondary); color: var(--text-primary); }

.send-btn { background-color: var(--primary-color); color: white; }
.send-btn svg { margin-left: -2px; transform: rotate(45deg); }

.input-file{
	display: none;
}
/* ==========================
   iOS/Toss Style Dropdown Menu
   (기존 .chat-dropdown-menu 관련 코드 삭제 후 이걸로 교체)
========================== */
.chat-dropdown-menu {
    display: none; 
    
    position: absolute;
    top: 55px; 
    /* [수정] 우측 여백을 20px -> 24px로 살짝 더 띄워서 아이콘과 중심축 맞춤 */
    right: 24px; 
    
    width: 160px; /* [수정] 너비를 살짝 줄여서(180->160) 더 컴팩트하게 */
    
    background-color: rgba(255, 255, 255, 0.98); /* 배경을 조금 더 불투명하게 */
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    
    border: 1px solid rgba(0,0,0,0.06);
    border-radius: 16px;
    
    box-shadow: 
        0 4px 6px -1px rgba(0, 0, 0, 0.05),
        0 10px 15px -3px rgba(0, 0, 0, 0.08);
        
    z-index: 1000;
    overflow: hidden;
    
    transform-origin: top right;
    animation: menuPop 0.2s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.chat-dropdown-menu.active {
    display: block;
}

.chat-dropdown-menu ul {
    list-style: none;
    margin: 0;
    
    /* [중요] 브라우저 기본 패딩(좌측 40px)을 확실하게 0으로 초기화 */
    padding-left: 0; 
    padding: 6px; 
}

.chat-dropdown-menu li a {
    display: block;
    
    /* [핵심 수정] 텍스트를 정중앙에 배치하여 좌우 여백 균형 맞춤 */
    text-align: center; 
    
    padding: 12px 10px; /* 좌우 패딩을 줄이고 중앙 정렬에 맡김 */
    font-size: 15px; 
    font-weight: 500;
    color: var(--text-primary);
    text-decoration: none;
    border-radius: 10px;
    transition: all 0.2s;
}

.chat-dropdown-menu li a:hover {
    background-color: rgba(0,0,0,0.05);
}

/* 나가기(Danger) 버튼 스타일 */
.chat-dropdown-menu li.danger a {
    color: var(--danger-color);
    font-weight: 600;
}

.chat-dropdown-menu li.danger a:hover {
    background-color: rgba(255, 59, 48, 0.08);
}

@keyframes menuPop {
    0% { opacity: 0; transform: scale(0.9) translateY(-10px); }
    100% { opacity: 1; transform: scale(1) translateY(0); }
}
.header-btn.active[data-tooltip]:hover::after {
    display: none;
}
