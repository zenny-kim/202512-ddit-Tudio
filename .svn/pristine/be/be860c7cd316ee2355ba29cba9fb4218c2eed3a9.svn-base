@charset "UTF-8";

/* ---------------------- 메인 콘텐츠 스타일 ---------------------- */                
.main-content-wrap {
  margin-left: var(--sidebar-width);
  padding: 20px;
}


.kpi-card-project {
  height: 100px;
}
                
.tab-content {
  background-color: #ffffff;
  padding: 20px;
  border: 1px solid #dee2e6;
  border-top: none;
}


/* 프로젝트 관리자 권한 설명 스타일 */
.admin-note {
	background-color: #fff3cd;
	color: #664d03;
	border: 1px solid #ffecb5;
	padding: 10px;
	border-radius: 5px;
	font-size: 0.9rem;
}
/* 권한 테이블 스타일 */
.permission-table th {
	background-color: #f8f9fa;
	vertical-align: middle;
}

.permission-table td {
	vertical-align: middle;
}
/* 탭 설정 카드 스타일 */
.tab-setting-card {
	border: 1px solid #dee2e6;
	border-radius: 8px;
	padding: 15px;
	transition: all 0.2s;
	background-color: #fff;
	height: 100%;
	cursor: move; /* 드래그 가능 커서 */
}

.tab-setting-card:hover {
	border-color: #0d6efd;
	background-color: #f8faff;
}
/* 필수 카드 스타일 (업무 탭) */
.tab-setting-card.disabled-card {
	background-color: #f8f9fa;
	border-color: #e9ecef;
	color: #6c757d;
	pointer-events: none; /* 클릭 방지 */
	cursor: not-allowed;
}
/* 드래그 앤 드롭 시각 효과 (SortableJS) */
.sortable-ghost {
	opacity: 0.4;
	background-color: #e9ecef;
	border: 1px dashed #adb5bd;
}

.drag-handle {
	cursor: grab;
	color: #adb5bd;
}