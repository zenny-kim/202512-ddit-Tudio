@charset "UTF-8";

/* ==========================================================================
   Tudio Task Style (Toss + Flow Hybrid)
   ========================================================================== */

:root {
    --task-bg-base: #ffffff;
    --task-bg-soft: #f9fafb;       /* 아주 연한 회색 (박스 배경) */
    --task-border: #f2f4f6;        /* 연한 테두리 */
    
    --task-text-main: #191f28;     /* 진한 검정 (제목 등) */
    --task-text-body: #333d4b;     /* 본문 */
    --task-text-sub: #8b95a1;      /* 라벨, 부가정보 */
    
    --task-primary: #3182f6;       /* 토스 블루 */
    --task-radius: 20px;           /* 둥근 모서리 */
}

/* 1. 모달 래퍼 (여백 확보) */
.task-modal-wrap {
    padding: 40px; /* 상하좌우 40px 넉넉하게 */
    color: var(--task-text-body);
    font-family: -apple-system, BlinkMacSystemFont, "Pretendard", sans-serif;
    background-color: #fff;
    border-radius: var(--task-radius); /* 모달 둥글게 */
}

/* 2. 헤더 영역 (제목과 닫기버튼 분리) */
.task-header-section {
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid var(--task-border);
}

.task-header-top {
    display: flex;
    justify-content: space-between; /* 양끝 정렬 */
    align-items: flex-start;
    gap: 20px; /* 제목과 닫기버튼 사이 간격 */
    margin-bottom: 12px;
}

.task-title-text {
    font-size: 26px;
    font-weight: 800;
    color: var(--task-text-main);
    line-height: 1.3;
    margin: 0;
    word-break: break-all; /* 긴 제목 줄바꿈 */
}

.task-meta-info {
    font-size: 14px;
    color: var(--task-text-sub);
    display: flex;
    align-items: center;
    gap: 8px;
}

/* 3. 핵심 정보 그리드 (여기가 깨졌던 부분!) */
.task-info-grid {
    background-color: var(--task-bg-soft); /* 회색 박스 */
    padding: 24px;
    border-radius: var(--task-radius);
    margin-bottom: 40px;
    display: flex;
    flex-direction: column;
    gap: 16px; /* 줄 간격 */
}

.task-info-row {
    display: flex; /* 가로 배치 (라벨 | 값) */
    align-items: center; /* 수직 중앙 정렬 */
    min-height: 32px;
}

.task-info-label {
    width: 100px; /* 라벨 너비 고정 */
    flex-shrink: 0; /* 줄어들지 않음 */
    font-size: 14px;
    font-weight: 600;
    color: var(--task-text-sub);
}

.task-info-value {
    flex-grow: 1; /* 나머지 공간 차지 */
    font-size: 15px;
    font-weight: 500;
    color: var(--task-text-main);
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
}

/* 담당자 칩 스타일 */
.task-user-chip {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: #fff;
    border: 1px solid #e5e8eb;
    padding: 4px 10px 4px 4px;
    border-radius: 100px;
    font-size: 14px;
    color: var(--task-text-main);
}
.task-user-profile {
    width: 24px; height: 24px;
    border-radius: 50%;
    background-color: #dee2e6;
    color: #fff;
    font-size: 11px;
    font-weight: bold;
    display: flex; justify-content: center; align-items: center;
}

/* 4. 본문 및 서브 섹션 */
.task-section {
    margin-bottom: 40px;
}
.task-section-title {
    font-size: 17px;
    font-weight: 700;
    color: var(--task-text-main);
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.task-content-box {
    line-height: 1.6;
    min-height: 100px;
    white-space: pre-wrap; /* 줄바꿈 보존 */
    color: var(--task-text-body);
}

/* 5. 하위업무 리스트 (테이블형) */
.task-sub-item {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    background: #fff;
    border: 1px solid var(--task-border);
    border-radius: 12px;
    margin-bottom: 8px;
    transition: 0.2s;
}
.task-sub-item:hover {
    border-color: #b0b8c1;
    background-color: #fafbfd;
}
.task-sub-status { width: 80px; flex-shrink: 0; }
.task-sub-title { flex-grow: 1; font-weight: 500; margin: 0 16px; }
.task-sub-meta { font-size: 13px; color: var(--task-text-sub); text-align: right; }

/* 6. 댓글 및 푸터 */
.task-comment-area {
    border-top: 1px solid var(--task-border);
    padding-top: 30px;
    margin-top: 20px;
}

.task-footer-actions {
    margin-top: 40px;
    display: flex;
    justify-content: flex-end;
    gap: 12px;
}

/* 공통 버튼/입력창 스타일 재정의 (깨짐 방지) */
.task-modal-wrap .form-control {
    background-color: var(--task-bg-soft);
    border: none;
    border-radius: 12px;
    padding: 12px;
}
.task-modal-wrap .btn {
    border-radius: 12px;
    font-weight: 600;
    padding: 10px 20px;
}
.task-modal-wrap .btn-primary {
    background-color: var(--task-primary);
    border: none;
}