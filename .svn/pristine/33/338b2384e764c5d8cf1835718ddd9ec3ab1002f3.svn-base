<script>
    document.addEventListener('DOMContentLoaded', function() {
        
        // -------------------------------------------------------------
        // [핵심] 진척도 수정 로직 (담당자 권한 체크)
        // -------------------------------------------------------------
        // TODO: 실제 서버 세션에서 사용자명을 가져와야 합니다. 예: const currentUser = "${sessionScope.user.name}";
        const currentUser = '김사용'; 
        
        const progressRange = document.getElementById('progressRange');
        const progressBar = document.getElementById('progressBar');
        const progressText = document.getElementById('progressText');
        const progressWarning = document.getElementById('progressWarning');
        const assigneeContainer = document.getElementById('assigneeList');
        
        // 1. 담당자 목록 추출
        const assignees = Array.from(assigneeContainer.querySelectorAll('.badge')).map(el => el.getAttribute('data-user'));
        
        // 2. 권한 확인 (현재 사용자가 담당자에 포함되어 있는지)
        const isAssignee = assignees.includes(currentUser);

        if (isAssignee) {
            // 담당자라면: 슬라이더 활성화 및 이벤트 연결
            progressRange.disabled = false;
            
            progressRange.addEventListener('input', function() {
                const value = this.value;
                
                // UI 업데이트
                progressBar.style.width = value + '%';
                progressBar.setAttribute('aria-valuenow', value);
                progressText.textContent = value + '%';
                
                // 100% 도달 시 색상 변경
                if (value == 100) {
                    progressBar.classList.remove('bg-primary');
                    progressBar.classList.add('bg-success');
                    progressText.classList.remove('text-primary');
                    progressText.classList.add('text-success');
                } else {
                    progressBar.classList.add('bg-primary');
                    progressBar.classList.remove('bg-success');
                    progressText.classList.add('text-primary');
                    progressText.classList.remove('text-success');
                }
                
                // TODO: 여기에 AJAX 호출을 추가하여 서버에 진척도 업데이트 요청
                // updateTaskProgress(taskId, value);
            });

        } else {
            // 담당자가 아니라면: 슬라이더 비활성화 및 경고 표시
            progressRange.disabled = true;
            progressRange.title = "업무 담당자만 진척도를 수정할 수 있습니다.";
            progressWarning.style.display = 'block'; 
        }

        // -------------------------------------------------------------
        // 기타 모달 이벤트 리스너 (필요 시 구현)
        // -------------------------------------------------------------
        const fullActivityModal = document.getElementById('fullActivityModal');
        if (fullActivityModal) {
            fullActivityModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget; 
                const viewType = button.getAttribute('data-view-type'); 
                // 모달 내용 로드 로직 구현
            });
        }
    });
</script>