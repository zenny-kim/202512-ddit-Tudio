        list.add(createTab(3, "게시판 (Board)", "bi-card-list", "text-info", "공지 및 자유게시판"));
        list.add(createTab(4, "일정 (Schedule)", "bi-calendar-date", "text-success", "캘린더 뷰 제공"));
        list.add(createTab(5, "자료실 (Files)", "bi-folder-fill", "text-warning", "파일 저장소"));
