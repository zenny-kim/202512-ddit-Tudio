<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.dashboard.mapper.ITodoMapper">

	<select id="selectTodoList" parameterType="int" resultType="kr.or.ddit.vo.TodoVO">
		SELECT 
			TODO_NO
			, MEMBER_NO
			, TODO_CONTENT
			, TODO_STATUS
			, TODO_REGDATE
			, TODO_DONEDATE
		FROM (
			SELECT * FROM TODO
			WHERE MEMBER_NO = #{memberNo}
		      AND (
			  	TODO_STATUS = 'N' OR
			  	(TODO_STATUS = 'Y' AND TRUNC(TODO_DONEDATE) = TRUNC(CURRENT_TIMESTAMP))
			  )
			ORDER BY
				TODO_STATUS ASC
				, TODO_REGDATE DESC
		) 
		<![CDATA[
		WHERE ROWNUM <= 10
		]]>		
	</select>
	
	<insert id="insertTodo" parameterType="kr.or.ddit.vo.TodoVO">
		INSERT INTO TODO (
			TODO_NO
			, MEMBER_NO
			, TODO_CONTENT
			, TODO_STATUS
			, TODO_REGDATE
		) VALUES (
			SEQ_TODO.NEXTVAL
			, #{memberNo}
			, #{todoContent}
			, 'N'
			, CURRENT_TIMESTAMP
		)
	</insert>
	
	<update id="updateTodoStatus" parameterType="kr.or.ddit.vo.TodoVO">
		UPDATE TODO
		SET
			TODO_STATUS = #{todoStatus}
			, TODO_DONEDATE = CASE WHEN #{todoStatus} = 'Y' THEN CURRENT_TIMESTAMP ELSE NULL END
		WHERE TODO_NO = #{todoNo}
	</update>

	<delete id="deleteCompletedTodo">
		DELETE FROM TODO
		WHERE TODO_STATUS = 'Y'
		<![CDATA[
		  AND TRUNC(TODO_DONEDATE) < TRUNC(CURRENT_TIMESTAMP)
		]]>
	</delete>
	
	<update id="updateTodoContent" parameterType="kr.or.ddit.vo.TodoVO">
        UPDATE TODO
        SET TODO_CONTENT = #{todoContent}
        WHERE TODO_NO = #{todoNo}
          AND MEMBER_NO = #{memberNo}
    </update>
	
	<delete id="deleteTodo" parameterType="kr.or.ddit.vo.TodoVO">
		DELETE FROM TODO
		WHERE TODO_NO = #{todoNo}
		  AND MEMBER_NO = #{memberNo}
	</delete>

</mapper>